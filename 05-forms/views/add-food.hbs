{{#extends 'base'}}

{{#block "content"}}
<h1>Enter your food</h1>
<form method="POST">
    <div>
        <label>Food Name:</label>
        <!-- all your `input type = whatever` must have a name attribute -->
        <input type="text" name="foodName" class="form-control"/>

    </div>
    <div>
        <label>Calories</label>
        <input type="text" name="calories" class="form-control"/>
    </div>

    <!-- the form must have a submit button
         the submit button must nested with the <form> tag -->
    <input type="submit" value="Add Food" class="btn btn-primary mt-3"/>
</form>
{{/block}}

{{/extends}}