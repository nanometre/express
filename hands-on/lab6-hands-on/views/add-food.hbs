{{#extends 'base'}}

{{#block "content"}}
<form method="POST">
    <div>
        <label class="form-label">Food Name:</label>
        <input type="text" class="form-control" name="foodName"/>
    </div>
    <div>
        <label class="form-label">Calories</label>
        <input type="text" class="form-control" name="calories"/>
    </div>
    <div>
        <label class="form-label">Tags</label>
        <div class="form-check form-check-inline">
            <div class="ml-3">
                <input class="form-check-input" type="checkbox" name='tags' id="unhealthy-checkbox" value="Unhealthy">
                <label class="form-check-label" for="unhealthy-checkbox">Unhealthy</label>
            </div>
            <div class="ml-3">
                <input class="form-check-input" type="checkbox" name='tags' id="snack-checkbox" value="Snack">
                <label class="form-check-label" for="snack-checkbox">Snack</label>
            </div>
            <div class="ml-3">
                <input class="form-check-input" type="checkbox" name='tags' id="homecooked-checkbox" value="Homecooked">
                <label class="form-check-label" for="homecooked-checkbox">Homecooked</label>
            </div>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Add Food"/>
    </div>
</form>
{{/block}}

{{/extends}}
