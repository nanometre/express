{{#extends 'base'}}
{{#block 'content'}}
<form method="POST">
    <div>
        <label>Name of Item:</label>
        <input type="text" name="item-name" class="form-control" />
    </div>

    <div>
        <label>Email Address:</label>
        <input type="text" name="email" class="form-control" />
    </div>

    <div>
        <label>Where did you leave your item:</label>
        <div class='form-check form-check-inline'>
            <div class="ms-4 d-inline-block">
                <input type="radio" class="form-check-input" name="item-left"
                   value="taxi" checked='checked'/>
                <label class="form-check-label">Taxi</label>
            </div>
            <div class="ms-4 d-inline-block">
                <input type="radio" class="form-check-input" name="item-left"
                   value="bus"/>
                <label class="form-check-label">Bus</label>
            </div>
            <div class="ms-4 d-inline-block">
                <input type="radio" class="form-check-input" name="item-left"
                  value="mrt"/>
                <label class="form-check-label">MRT</label>
            </div>
        </div>
    </div>

    <div>
        <label>Description of Item: </label>
        <input type="checkbox" value="bulky" name="description">
        <label>Bulky</label>
        <input type="checkbox" value="expensive" name="description"/>
        <label>Expensive</label>
        <input type="checkbox" value="colorful" name="description"/>
        <label>Colorful</label>
        <input type="checkbox" value="branded" name="description"/>
        <label>Branded</label>
        <input type="checkbox" value="small" name="description"/>
        <label>Small</label>
        <input type="checkbox" value="plain" name="description"/>
        <label>Plain</label>
    </div>

    <div>
        <button type="submit">Submit</button>
    </div>
</form>
{{/block}}
{{/extends}}